<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bj"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="160dp">
        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/login_phone"
            android:hint="手机号"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@android:color/transparent"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/register_icon_phone_n_xhdpi"
            android:textColorHint="#ffffff"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <View
            android:layout_width="match_parent"
            android:background="#ffffff"

            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:hint="密码"
                android:id="@+id/login_password"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@android:color/transparent"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/register_icon_lock_n_xhdpi"
                android:textColorHint="#ffffff"
                android:textSize="15sp"
                android:password="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/xsmm"
                android:onClick="onClick"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/login_icon_eye_n_xhdpi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#ffffff"

            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/jzmm"
                android:textColor="#ffffff"
                android:text="记住密码"
                android:paddingLeft="10dp"
                android:button="@drawable/checkbox_bg"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/login_reg"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:text="快速注册"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/login"
        android:layout_alignParentBottom="true"
        android:text="登录"
        android:layout_gravity="bottom"
        android:background="@drawable/login_shape_bg"
        android:textColor="#ff5f71"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="--------第三方登录--------"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_above="@+id/qq" />
    <Button
        android:id="@+id/qq"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/qq"/>
</RelativeLayout>